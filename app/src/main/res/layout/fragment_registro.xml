<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView87"
        android:layout_width="140dp"
        android:layout_height="161dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logogrande"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="267dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:text="Â¡Registrate para sentir de cerca a tus equipos favoritos!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView87" />

    <Button
        android:id="@+id/button3"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/boton_redondeado"
        android:backgroundTint="#FF5555"
        android:text="Continuar con Google"
        android:drawableLeft="@drawable/googlelogo"
        android:paddingLeft="45dp"
        android:paddingRight="35dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <Button
        android:id="@+id/botonEmail"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_redondeado"
        android:backgroundTint="#1F9900"
        android:text="Continuar con email"
        android:drawableLeft="@drawable/correo"
        android:paddingLeft="45dp"
        android:paddingRight="40dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:icon="@drawable/correo"
        app:iconGravity="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_redondeado"
        android:backgroundTint="#487BFF"
        android:text="Continuar con Facebook"
        android:drawableLeft="@drawable/facebooklogo"
        android:paddingLeft="45dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEmail" />

    <Button
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_redondeado"
        android:backgroundTint="@color/black"
        android:text="Continuar con Apple"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/applelogo"
        android:paddingLeft="45dp"
        android:paddingRight="40dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>